{
  "devDependencies": {
    "electron": "^35.1.3",
    "inquirer": "^12.5.0",
    "nodemon": "^3.1.9",
    "turbo": "^2.5.4",
    "typescript": "^5.8.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "build:deps": "turbo build --filter='@coffic/cosy-*' --filter='@coffic/buddy-types'",
    "build:buddy": "turbo build --filter='buddy'",
    "build:buddy:mac": "turbo build --filter='@coffic/buddy-types' && pnpm --filter buddy build:mac",
    "build:plugins": "turbo build --filter='@coffic/buddy-plugin-*'",
    "dev": "pnpm --filter buddy dev",
    "dev:deps": "turbo dev --filter='@coffic/cosy-*' --parallel",
    "dev:all": "turbo dev --parallel",
    "ext": "nodemon pipeline.mjs",
    "mcp": "pnpm --filter mcp-core test",
    "lint": "turbo lint",
    "test": "turbo test",
    "clean": "turbo clean",
    "typecheck": "turbo typecheck"
  },
  "packageManager": "pnpm@10.12.1",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "electron-log": "^5.3.2",
    "source-map-support": "^0.5.21"
  }
}
