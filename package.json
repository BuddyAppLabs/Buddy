{
  "name": "buddy_workspace",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "nodemon": "^2.0.15",
    "typescript": "^4.4.4"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "watch": "nodemon pipeline.js",
    "build": "pnpm -r build",
    "build:mcp": "pnpm -r build:mcp",
    "dev:app": "pnpm --filter buddy dev",
    "dev:ext": "nodemon pipeline.js",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "clean": "pnpm -r clean",
    "run:mcp": "pnpm --filter smart-buddy run:mcp"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
