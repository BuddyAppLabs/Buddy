---
/**
 * @component FinalCTA
 * @description 最终行动号召 - 鼓励用户开始使用
 */

import { Button, Container, Heading } from '@coffic/cosy-ui';

export interface Props {
    lang: string;
}

const { lang } = Astro.props;

const title = lang === 'zh-cn' ? '今天就开始使用 Buddy' : 'Start Using Buddy Today';

const subtitle =
    lang === 'zh-cn'
        ? '聚焦式桌面助手，插件与 AI 一体化，提升效率'
        : 'Focused desktop assistant with plugins and integrated AI to boost efficiency';

const ctaStart = lang === 'zh-cn' ? '快速开始' : 'Get Started';
const ctaGithub = 'GitHub';
---

<Container
    width="full"
    padding="3xl"
    background="gradient"
    margin="none"
    contentCentered>
    <Container width="2xl" padding="none" contentCentered>
        <Heading level={2} align="center" size="4xl" weight="bold" margin="lg">
            {title}
        </Heading>
        <Heading
            level={3}
            align="center"
            size="xl"
            weight="normal"
            color="muted"
            margin="xl">
            {subtitle}
        </Heading>

        <Container
            flex="row"
            gap="lg"
            padding="lg"
            contentCentered
            class="cta-buttons">
            <Button variant="primary" size="xl" href={`/${lang}/manuals`}>
                {ctaStart}
            </Button>
            <Button
                variant="secondary"
                size="xl"
                href="https://github.com/cosyzone/cosy-ui"
                target="_blank">
                {ctaGithub}
            </Button>
        </Container>
    </Container>
</Container>

<style>
    .cta-buttons {
        flex-wrap: wrap;
    }
</style>
