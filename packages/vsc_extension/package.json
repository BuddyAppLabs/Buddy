{
  "name": "smart-buddy",
  "displayName": "Smart Code Buddy",
  "description": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/cofficlab/CodeBuddy"
  },
  "version": "0.0.10",
  "engines": {
    "vscode": "^1.63.0"
  },
  "publisher": "coffic",
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onCommand:buddycoder.open"
  ],
  "contributes": {
    "commands": [
      {
        "command": "buddycoder.open",
        "title": "Open AI Chat Assistant"
      }
    ],
    "configuration": {
      "title": "AI Chat Assistant",
      "properties": {
        "buddycoder.aiProvider": {
          "type": "string",
          "default": "openai",
          "enum": [
            "openai",
            "anthropic",
            "deepseek"
          ],
          "description": "Select the AI provider to use"
        },
        "buddycoder.openai.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for OpenAI"
        },
        "buddycoder.anthropic.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for Anthropic"
        },
        "buddycoder.deepseek.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for Deepseek"
        }
      }
    }
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "",
    "preview": "vite preview",
    "lint": "eslint src --ext ts",
    "dev:vscode": "bash -exec 'code --extensionDevelopmentPath=$(pwd)'",
    "deploy": "vsce publish --yarn"
  },
  "dependencies": {
    "chalk": "5.4.1",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.16.3",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "eslint": "^9.30.1",
    "glob": "^11.0.3",
    "mocha": "^11.7.1",
    "typescript": "^5.8.3",
    "vite": "6.2.2"
  }
}
