{
    "name": "buddy",
    "version": "1.0.0",
    "description": "An Electron application with Vue and TypeScript",
    "main": "./out/main/index.js",
    "author": "example.com",
    "homepage": "https://electron-vite.org",
    "scripts": {
        "format": "prettier --write .",
        "lint": "eslint --cache .",
        "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
        "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
        "typecheck": "npm run typecheck:node && npm run typecheck:web",
        "start": "electron-vite preview",
        "dev": "npm run build:native && electron-vite dev",
        "build": "npm run typecheck && npm run build:native && electron-vite build && npm run copy-native",
        "postinstall": "electron-builder install-app-deps",
        "build:native": "node native/command-key-listener/build.cjs",
        "copy-native": "node scripts/copy-native-modules.mjs",
        "build:unpack": "npm run build && electron-builder --dir",
        "build:win": "npm run build && electron-builder --win",
        "build:mac": "npm run build && electron-builder --mac",
        "build:linux": "npm run build && electron-builder --linux"
    },
    "dependencies": {
        "@electron-toolkit/preload": "^3.0.1",
        "@electron-toolkit/utils": "^4.0.0",
        "daisyui": "^5.0.8",
        "electron-updater": "^6.3.9",
        "yaml": "^2.7.0"
    },
    "devDependencies": {
        "@electron-toolkit/eslint-config-prettier": "3.0.0",
        "@electron-toolkit/eslint-config-ts": "^3.0.0",
        "@electron-toolkit/tsconfig": "^1.0.1",
        "@types/node": "^22.13.10",
        "@vitejs/plugin-vue": "^5.2.1",
        "autoprefixer": "^10.4.21",
        "electron": "^35.0.3",
        "electron-builder": "^26.0.11",
        "electron-vite": "^3.0.0",
        "eslint": "^9.20.1",
        "eslint-plugin-vue": "^10.0.0",
        "node-addon-api": "^7.0.0",
        "node-gyp": "^10.0.1",
        "postcss": "^8.5.3",
        "prettier": "^3.5.3",
        "tailwindcss": "^4.0.15",
        "typescript": "^5.8.2",
        "vite": "^6.2.2",
        "vue": "^3.5.13",
        "vue-tsc": "^2.2.8"
    }
}
