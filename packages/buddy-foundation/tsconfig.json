{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "declaration": true,
        "outDir": "dist",
        "rootDir": "src",
        "sourceMap": true,
        "declarationMap": true
    },
    "include": [
        "src/**/*",
        "../cosy-framework/src/routing"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}